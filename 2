class Shoe
  attr_accessor :color, :size, :material, :condition
  attr_reader :brands
  
  BRANDS = []
  
  def initialize(brand)
    @brands = brand
    if !BRANDS.include?(brand)
    BRANDS <<  brand
    end
  end
  def cobble
    self.condition = "new"
    puts "Your shoe is as good as new!"
  end
end

# We are going to shovel brand into BRANDS if BRANDS does not have brand in itâ€©